# MySQL (choose either MYSQL_URL or split fields)
MYSQL_URL="mysql://root:password@127.0.0.1:3306/admin_cosmorigin"
# MYSQL_HOST="127.0.0.1"
# MYSQL_PORT="3306"
# MYSQL_USER="root"
# MYSQL_PASSWORD="password"
# MYSQL_DATABASE="admin_cosmorigin"

# Local storage root for attachments / avatars
LOCAL_STORAGE_ROOT="/Users/you/Documents/admin_cosmorigin-storage"

# Max upload size (bytes), optional. Default ~5MB.
UPLOAD_MAX_BYTES="5242880"

# Public app URL used in notification deep links
APP_BASE_URL="http://localhost:3000"

# SMS notifications switch
SMS_NOTIFY_ENABLED="0"

# Notification policy (optional JSON)
# Supported channels: sms / in_app / email
# Example:
# NOTIFY_POLICY_JSON="{\"purchase_submitted\":{\"enabled\":true,\"channels\":[\"sms\",\"in_app\"]},\"purchase_approved\":{\"enabled\":true,\"channels\":[\"sms\",\"in_app\"]},\"reimbursement_submitted\":{\"enabled\":true,\"channels\":[\"sms\",\"in_app\"]},\"purchase_paid\":{\"enabled\":true,\"channels\":[\"sms\",\"in_app\"]}}"
NOTIFY_POLICY_JSON=""

# SMS gateway webhook (required when SMS_NOTIFY_ENABLED=1)
# The gateway receives JSON: { channel, phones, content, app }
SMS_WEBHOOK_URL=""
SMS_WEBHOOK_APPROVAL_URL=""
SMS_WEBHOOK_APPLICANT_URL=""
SMS_WEBHOOK_FINANCE_URL=""
SMS_WEBHOOK_TOKEN=""

# Fallback phones (comma separated, optional)
SMS_FALLBACK_PHONES=""
SMS_FALLBACK_APPROVAL_PHONES=""
SMS_FALLBACK_APPLICANT_PHONES=""
SMS_FALLBACK_FINANCE_PHONES=""
